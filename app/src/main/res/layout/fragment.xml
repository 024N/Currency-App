<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context="oz.doviz.Fragment">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/doviz"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/third_kindTextView"
            app:layout_widthPercent="33%"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="DÖVİZ"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/soupTextView"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:paddingTop="5dp"
            android:text="SATIŞ(TL)"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_widthPercent="33%" />

        <TextView
            android:id="@+id/main_dinnerTextView"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:text="ALIŞ(TL)"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_widthPercent="33%" />

    </android.support.percent.PercentRelativeLayout>

    <ListView
        android:id="@+id/fragment_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/doviz"
        android:divider="#180884"
        android:dividerHeight="2dp" />


</RelativeLayout>